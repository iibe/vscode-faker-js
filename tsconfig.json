{
    "include": ["./src/**/*.ts"],
    "exclude": [
        "./node_modules",
        "./out",
        "./test",
        "./src/codegen.ts",
        "tsup.config.extension.ts"
    ],
    "compilerOptions": {
        "lib": ["ES2022"],
        "strict": true,

        "rootDir": "./src",
        "outDir": "./out",
        "module": "Node16",
        "target": "ES2022",
        "sourceMap": true
    }
}
